{
  "name": "alpha-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "prettier --write \"pages/**/*.{js,jsx,ts,tsx,json,md}\" --write \"components/**/*.{js,jsx,ts,tsx,json,md}\" --write \"lib/**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "pages/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "components/**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "next": "10.0.9",
    "prettier": "^2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  }
}
